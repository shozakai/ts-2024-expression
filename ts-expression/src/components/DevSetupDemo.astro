---
// TailwindCSS、TypeScript、Astro Iconを使用したデモコンポーネント
import { Icon } from 'astro-icon/components';

const features = [
  {
    icon: 'mdi:tailwind',
    title: 'TailwindCSS',
    description: 'ユーティリティファーストのCSSフレームワーク',
    color: 'text-blue-500'
  },
  {
    icon: 'mdi:eslint',
    title: 'ESLint',
    description: 'コード品質を保つためのリンター',
    color: 'text-purple-500'
  },
  {
    icon: 'mdi:format-align-left',
    title: 'Prettier',
    description: 'コードフォーマッタ',
    color: 'text-gray-500'
  },
  {
    icon: 'mdi:star',
    title: 'Astro Icon',
    description: 'アイコンライブラリ',
    color: 'text-yellow-500'
  }
] as const;
---

<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">
    開発環境セットアップ完了！
  </h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {features.map((feature) => (
      <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
        <div class="flex items-center mb-4">
          <Icon name={feature.icon} class={`w-8 h-8 ${feature.color} mr-3`} />
          <h3 class="text-xl font-semibold text-gray-800">{feature.title}</h3>
        </div>
        <p class="text-gray-600">{feature.description}</p>
      </div>
    ))}
  </div>
  
  <div class="mt-8 p-6 bg-blue-50 rounded-lg border border-blue-200">
    <h2 class="text-xl font-semibold text-blue-800 mb-4">利用可能なスクリプト</h2>
    <div class="space-y-2">
      <div class="flex items-center">
        <code class="bg-gray-100 px-3 py-1 rounded mr-3">npm run lint</code>
        <span class="text-gray-600">ESLintでコードをチェック</span>
      </div>
      <div class="flex items-center">
        <code class="bg-gray-100 px-3 py-1 rounded mr-3">npm run format</code>
        <span class="text-gray-600">Prettierでコードをフォーマット</span>
      </div>
      <div class="flex items-center">
        <code class="bg-gray-100 px-3 py-1 rounded mr-3">npm run dev</code>
        <span class="text-gray-600">開発サーバーを起動</span>
      </div>
    </div>
  </div>
</div>

<style>
  /* SASSとTailwindCSSの併用例 */
  .demo-container {
    @apply bg-gradient-to-br from-blue-50 to-purple-50;
    
    &:hover {
      @apply shadow-xl;
    }
  }
</style> 